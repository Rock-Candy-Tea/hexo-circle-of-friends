    "/post": {
      "get": {
        "tags": [
          "PUBLIC_API"
        ],
        "summary": "返回指定链接的所有文章",
        "description": "根据朋友链接获取该朋友的所有文章，支持随机朋友和指定朋友",
        "operationId": "post_post_get",
        "parameters": [
          {
            "name": "link",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "朋友链接地址，为空时随机选择",
              "title": "Link"
            },
            "description": "朋友链接地址，为空时随机选择"
          },
          {
            "name": "num",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "description": "返回文章数量，-1表示返回所有",
              "default": -1,
              "title": "Num"
            },
            "description": "返回文章数量，-1表示返回所有"
          },
          {
            "name": "rule",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^(created|updated)$",
              "description": "排序规则：created(创建时间) 或 updated(更新时间)",
              "default": "created",
              "title": "Rule"
            },
            "description": "排序规则：created(创建时间) 或 updated(更新时间)"
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回文章列表",
