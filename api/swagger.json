          "SYSTEM"
        ],
        "summary": "获取版本信息",
        "description": "返回当前API服务的版本号",
        "operationId": "get_version_info_version_get",
        "responses": {
          "200": {
            "description": "成功返回版本信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionResponse"
                },
                "example": {
                  "version": "1.0.0"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AllResponse": {
        "properties": {
          "statistical_data": {
            "$ref": "#/components/schemas/StatisticalData"
          },
          "article_data": {
            "items": {
              "$ref": "#/components/schemas/ArticleData"
            },
            "type": "array",
            "title": "Article Data"
          }
        },
        "type": "object",
        "required": [
          "statistical_data",
          "article_data"
        ],
        "title": "AllResponse",
        "description": "全部文章响应模型"
      },
      "ArticleData": {
        "properties": {
          "floor": {
            "type": "integer",
            "title": "Floor",
            "description": "文章楼层",
            "example": 1
          },
          "title": {
            "type": "string",
            "title": "Title",
            "description": "文章标题",
            "example": "Wave Terminal 多功能开源终端"
          },
          "created": {
            "type": "string",
            "title": "Created",
            "description": "创建时间",
            "example": "2025-07-31"
          },
          "updated": {
            "type": "string",
            "title": "Updated",
            "description": "更新时间",
            "example": "2025-07-31"
          },
          "link": {
            "type": "string",
            "title": "Link",
            "description": "文章链接",
            "example": "https://blog.example.com/post"
          },
          "author": {
            "type": "string",
            "title": "Author",
            "description": "作者",
            "example": "张三"
          },
          "avatar": {
            "type": "string",
            "title": "Avatar",
            "description": "头像链接",
            "example": "https://example.com/avatar.jpg"
          },
          "summary": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Summary",
            "description": "AI生成摘要",
            "example": "这是一篇关于终端工具的文章..."
          },
          "ai_model": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Ai Model",
            "description": "AI模型",
            "example": "qwen3"
          },
          "summary_created_at": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Summary Created At",
            "description": "摘要创建时间",
            "example": "2025-01-01 10:00:00"
          },
          "summary_updated_at": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Summary Updated At",
            "description": "摘要更新时间",
            "example": "2025-01-01 10:00:00"
          }
        },
        "type": "object",
        "required": [
          "floor",
          "title",
          "created",
          "updated",
          "link",
          "author",
          "avatar"
        ],
        "title": "ArticleData",
        "description": "文章数据模型（用于/all接口，包含summary字段）"
      },
      "ErrorResponse": {
        "properties": {
          "message": {
            "type": "string",
            "title": "Message",
            "description": "错误信息",
            "example": "rule error, please use 'created'/'updated'"
          }
        },
        "type": "object",
        "required": [
          "message"
        ],
        "title": "ErrorResponse",
        "description": "错误响应模型"
      },
      "Friend": {
        "properties": {
          "name": {
            "type": "string",
            "title": "Name",
            "description": "朋友名称",
            "example": "白雾茫茫丶"
          },
          "link": {
            "type": "string",
            "title": "Link",
            "description": "朋友链接",
            "example": "https://blog.xmwpro.com/"
          },
          "avatar": {
            "type": "string",
