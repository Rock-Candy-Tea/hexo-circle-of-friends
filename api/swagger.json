{
  "openapi": "3.1.0",
  "info": {
    "title": "Hexo Circle of Friends API",
    "description": "文章和朋友管理API，支持AI生成的文章摘要功能。\n\n支持多种数据库：SQLite、MySQL、MongoDB",
    "contact": {
      "name": "Hexo Circle of Friends",
      "url": "https://github.com/Rock-Candy-Tea/hexo-circle-of-friends"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "6.0.5"
  },
  "paths": {
    "/all": {
      "get": {
        "tags": [
          "PUBLIC_API"
        ],
        "summary": "返回完整统计信息",
        "description": "获取数据库中的统计信息和文章列表，支持分页和排序",
        "operationId": "all_all_get",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "description": "起始位置，从0开始",
              "default": 0,
              "title": "Start"
            },
            "description": "起始位置，从0开始"
          },
          {
            "name": "end",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "description": "结束位置，-1表示不限制",
              "default": -1,
              "title": "End"
            },
            "description": "结束位置，-1表示不限制"
          },
          {
            "name": "rule",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^(created|updated)$",
              "description": "排序规则：created(创建时间) 或 updated(更新时间)",
              "default": "updated",
              "title": "Rule"
            },
            "description": "排序规则：created(创建时间) 或 updated(更新时间)"
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回统计信息和文章列表",
            "content": {
              "application/json": {
                "schema": {
                  "anyOf": [
                    {
                      "$ref": "#/components/schemas/AllResponse"
                    },
                    {
                      "$ref": "#/components/schemas/ErrorResponse"
                    }
                  ],
                  "title": "Response All All Get",
                  "$ref": "#/components/schemas/AllResponse"
                },
                "example": {
                  "statistical_data": {
                    "friends_num": 34,
                    "active_num": 19,
                    "error_num": 15,
                    "article_num": 31,
                    "last_updated_time": "2025-01-01 12:00:00"
                  },
                  "article_data": [
                    {
                      "floor": 1,
                      "title": "Wave Terminal 多功能开源终端",
                      "created": "2025-07-31",
                      "updated": "2025-07-31",
                      "link": "https://blog.example.com/post",
                      "author": "张三",
                      "avatar": "https://example.com/avatar.jpg",
                      "summary": "这是一篇关于终端工具的文章...",
                      "ai_model": "qwen3",
                      "summary_created_at": "2025-01-01 10:00:00",
                      "summary_updated_at": "2025-01-01 10:00:00"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "example": {
                  "message": "rule error, please use 'created'/'updated'"
                },
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "example": {
                  "message": "数据库连接失败"
                },
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/friend": {
      "get": {
        "tags": [
          "PUBLIC_API"
        ],
        "summary": "返回所有友链",
        "description": "获取数据库中所有朋友的链接信息",
        "operationId": "friend_friend_get",
        "responses": {
          "200": {
            "description": "成功返回友链列表",
            "content": {
              "application/json": {
                "schema": {
                  "anyOf": [
                    {
                      "items": {
                        "$ref": "#/components/schemas/Friend"
                      },
                      "type": "array"
                    },
                    {
                      "$ref": "#/components/schemas/NotFoundResponse"
                    }
                  ],
                  "title": "Response Friend Friend Get"
                },
                "example": [
                  {
                    "name": "Jerry",
                    "link": "https://butterfly.js.org/",
                    "avatar": "https://butterfly.js.org/img/avatar.png"
                  },
                  {
                    "name": "Alice",
                    "link": "https://alice.blog/",
                    "avatar": "https://alice.blog/avatar.jpg"
                  }
                ]
              }
            }
          },
          "404": {
            "description": "未找到友链",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundResponse"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
